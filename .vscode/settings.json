{
    "python.pythonPath": "env/bin/python",
    "python.formatting.blackArgs": [
        "--line-length",
        "90",
        "--fast"
    ],
    "python.formatting.provider": "black",
    "[git-commit]" : {
        "editor.fontFamily": "D2Coding",
        "editor.rulers": [
            50,
            72
        ]
    }
}